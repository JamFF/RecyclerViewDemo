<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jam.ff.recyclerview.MainActivity">

    <Button
        android:id="@+id/btn_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/recyclerView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_customer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/customer_view" />

    <Button
        android:id="@+id/btn_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/headerView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_qq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/qq" />

</LinearLayout>
